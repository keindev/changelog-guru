{
  "configurations": [
    {
      "name": "Generate changelog",
      "type": "node",
      "request": "launch",
      "outputCapture": "std",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--experimental-specifier-resolution=node",
        "--nolazy",
        "--inspect-brk=9229",
        "--loader",
        "ts-node/esm",
        "src/cli/bin.ts",
        "generate"
      ],
      "port": 9229
    },
    {
      "name": "Lint commit message",
      "type": "node",
      "request": "launch",
      "outputCapture": "std",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--experimental-specifier-resolution=node",
        "--nolazy",
        "--inspect-brk=9229",
        "--loader",
        "ts-node/esm",
        "src/cli/bin.ts",
        "lint",
        "--message",
        "'.git/COMMIT_EDITMSG'"
      ],
      "port": 9229
    }
  ]
}
